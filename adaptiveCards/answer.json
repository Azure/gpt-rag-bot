{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "${answer}",
            "spacing": "None",
            "wrap": true,
            "horizontalAlignment": "Left",
            "fontType": "Default",
            "size": "Default",
            "weight": "Lighter",
            "color": "Default"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "",
                                    "verb": "like",
                                    "iconUrl": "data:image/png;base64,"
                                },
                                {
                                    "type": "Action.Submit",
                                    "title": "",
                                    "verb": "dislike",
                                    "iconUrl": "data:image/png;base64,"
                                }
                            ],
                            "spacing": "None",
                            "horizontalAlignment": "Right"
                        }
                    ],
                    "width": "stretch"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${count} of ${maxRounds} responses\nAI-generated content may be incorrect",
                            "spacing": "None",
                            "horizontalAlignment": "Right",
                            "style": "default",
                            "fontType": "Default",
                            "size": "Small",
                            "color": "Default",
                            "isSubtle": true
                        }
                    ],
                    "verticalContentAlignment": "Bottom"
                }
            ]
        }
    ]
  }